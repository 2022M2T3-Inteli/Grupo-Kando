<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Funcionários</title>

    <link rel="stylesheet" href="css/employees.css">
    <link rel="stylesheet" href="css/style.css">
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />

	<!-- Bootstrap Table -->
    <link href="https://unpkg.com/bootstrap-table@1.20.1/dist/bootstrap-table.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include("../partials/sidebar.ejs") %>
        <div id="page" class="col">
            <%- include("../partials/header.ejs", {page: "Funcionários"}) %>
          <div class="row">
            <div id="main">
              <div class="container" id="main-container">
                <div class="row">
                  <div class="col-3" id="search-project">
                    <form autocomplete="off" onsubmit="return false;">
                      <div id="search-group">
                        <input
                          type="text"
                          id="search"
                          placeholder="Search"
                          name="search"
                          autocomplete="off"
                        />
                        <div class="input-group-btn">
                            <img src="img/lupa.png" alt="">
                        </div>
                      </div>
                    </form>
                  </div>

                  <!-- Button trigger modal add employee -->
                  <div class="col add-element-button main-buttons-container" id="add-employee-button">
                    <button
                      type="button"
                      class="btn-primary"
                      data-bs-toggle="modal"
                      data-bs-target="#add-employee-modal"
                    >
                      Adicionar novo
                    </button>
                  </div>
                </div>
                <div class="table-container">
                  <table 
                    id="employees-table" 
                    class="table table-hover table-style"
                    data-show-multi-sort="true"
                    data-sort-priority='[
                      {"sortName": "name","sortOrder":"desc"},
                      {"sortName": "job","sortOrder":"desc"}, 
                    ]'
                  >
                    <thead>
                      <tr>
                      <th data-field="name" data-sortable="true">Funcionário</th>
                      <th data-field="role_name" data-sortable="true">Função</th>
                      <th data-field="projects_workload" class="employee-allocation">Alocação</th>
                      <th data-field="projectsQty">N° de projetos</th>
                      <th data-field="tools">Ações</th>
                      </tr>
                    </thead>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- toast - employee succesfully added -->
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
          <div
            id="liveToast"
            class="toast"
            role="alert"
            aria-live="assertive"
            aria-atomic="true"
          >
            <div class="toast-header">
              <strong class="me-auto">Mensagem</strong>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="toast"
                aria-label="Close"
              ></button>
            </div>
            <div class="toast-body">Funcionário criado com sucesso.</div>
          </div>
        </div>
      </div>

          <!-- toast - employee added succesfully -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <strong class="me-auto">Mensagem</strong>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">Colaborador cadastrado com sucesso.</div>
      </div>
    </div>
  </div>


      <!-- Modal Add Employee -->
      <form action ='/employees' method ='POST'>
        <div class="parent-modal">
          <div
            class="modal fade"
            id="add-employee-modal"
            tabindex="-1"
            aria-labelledby="add-employee-modal-label"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-container">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="add-employee-modal-label">
                    Adicionar Funcionário
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <div class="row container">
                    <div class="row form-group">
                        <div class="col-4">
                          <label for="employee-name">Nome do Funcionário: </label>
                        </div>
                        <div class="col">
                          <input
                            type="text"
                            class="form-control"
                            name="name"
                            id="employee-name"
                            placeholder="Nome do Funcionário"
                          />
                        </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-4">
                        <label for="employee-function">Função: </label>
                      </div>
                      <div class="col">
                        <select name="role_name" id="employee-function">
                          <option value="dev">Desenvolvedor</option>
                          <option value="Analista">Analista</option>
                          <option value="DBA-manager">
                            Gerente de Projetos
                          </option>
                        </select>
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-4">
                        <label for="employee-local">Região: </label>
                      </div>
                      <div class="col">
                        <select name="location" id="local">
                          <option value="AM">Manaus</option>
                          <option value="SP">Guarulhos</option>
                          <option value="">Ambos</option>
                        </select>
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-4">
                        <label for="employee-worktime"
                          >Tempo alocado para projetos no mês:
                        </label>
                      </div>
                      <div class="col">
                        <input
                          type="number"
                          name="projects_workload"
                          id="employee-worktime"
                        />
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-4"><label for="">Funcionário Interno (CLT)</label></div>
                      <div class="col">
                        <select name="type" id="">
                          <option value="clt">CLT</option>
                          <option value="third-employee">Terceiro</option>
                        </select>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-1"><label for="tags">Tags: </label></div>
                      <div class="col employee-tag-list">
                        <div class="employee-tag-element">
                        </div>
                        <div class="employee-add-tag">
                          <button type="button" onclick="newTagName()">+</button>
                        </div>
                      </div>
                    </div>
                </div>
              </div>
              <div class="modal-footer">
                <div class="buttons-container">
                  <button type="submit" class="btn-primary" id="liveToastBtn"
                  data-bs-dismiss="modal"
                  aria-label="Close">
                    Adicionar Funcionário
                  </button>
                </div>
                <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> -->
                <!-- <button type="button" class="btn btn-primary">PLACEHOLDER</button> -->
              </div>
            </div>
          </div>
        </div>
      </form>

      <!-- Modal View Employee -->
