<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard</title>

  <link rel="stylesheet" href="css/style.css" />
  <link rel="stylesheet" href="css/dashboard.css" />
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link href="http://fonts.cdnfonts.com/css/estricta" rel="stylesheet" />
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <%- include("../partials/sidebar.ejs") %>
        <div id="page" class="col">
          <%- include("../partials/header.ejs", {page: "Dashboard" }) %>
            <div class="row">
              <div id="dashboard">
                <select name="dashboard-section" id="dashboard-section" onchange="changeDashSection(this.value)">
                  <option value="general" selected>Geral</option>
                  <option value="14">Projeto 14</option>
                  <option value="15">Projeto 15</option>
                  <option value="project3">Projeto 3</option>
                </select>
                <div id="general">
                  <div class="row chart-container">
                    <div id="general-chart1" class="col-5 dash-chart">
                      <div class="chart-title">
                        <div id="general-hours-chart0-title">
                          Carga Horária Total por Mês
                        </div>
                        <div id="general-hours-chart1-title" hidden>
                          Carga Horária da Função por Mês
                        </div>
                        <div id="general-hours-chart2-title" hidden>
                          Carga Horária da Função por Mês
                        </div>
                        <div id="general-hours-chart3-title" hidden>
                          Carga Horária da Função por Mês
                        </div>
                        <!-- <div class="chart-selection">
                                            
                                        </div> -->
                        <div class="select-wrapper">
                          <select name="chart-select" class="chart-select" id="hours-chart-select" 
                            onchange="chartChange(this.value)">
                            <option value="all" selected>Todos</option>
                          </select>
                        </div>
                      </div>
                      <canvas id="general-hours-chart" class="area-chart hours-chart"></canvas>
                    </div>
                    <div id="general-chart2" class="col-5 dash-chart">
                      <div class="chart-title">
                        Colaboradores Alocados por Mês
                      </div>
                      <canvas id="general-employees-chart" class="area-chart"></canvas>
                    </div>
                  </div>
                  <div class="row chart-container">
                    <div id="general-chart3" class="col-5 dash-chart">
                      <div class="chart-title">Carga Horária Média por Mês</div>
                      <canvas id="general-roles-chart"></canvas>
                    </div>
                    <div id="general-chart5" class="col-5 dash-chart">
                      <div class="chart-title">Status dos Funcionarios</div>
                      <canvas id="general-employee-chart2"></canvas>
                    </div>
                  </div>
                </div>
                <div id="project" hidden>
                  <div class="row chart-container">
                    <div class="col-5 dash-chart">
                      <div class="chart-title">
                        Colaboradores Alocados ao Projeto
                      </div>
                      <canvas id="project-employee-chart"></canvas>
                    </div>
                    <!-- ######################################################## -->
                    <div class="col-5 dash-chart">
                      <div class="chart-title">Carga Horária Média por Mês</div>
                      <canvas id="project-role-chart"></canvas>
                      <div class="chart-description-container">
                        <div class="role-chart-limit">Limite de 180H</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
  </div>

  <!-- Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <!-- jquery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

  <!-- Chart.js datalabels -->
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2  "></script>
  <script src="js/dashboard.js"></script>
  <script></script>
</body>

</html>