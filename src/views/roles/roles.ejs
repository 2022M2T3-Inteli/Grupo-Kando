<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Funções</title>

    <!-- <link rel="stylesheet" href="css/cadastro_projeto.css" /> -->
    <!-- <link rel="stylesheet" href="css/projects2.css" /> -->
    <link rel="stylesheet" href="css/roles.css" />
    <link rel="stylesheet" href="css/style.css" />
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      href="https://unpkg.com/bootstrap-table@1.20.1/dist/bootstrap-table.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include("../partials/sidebar.ejs") %>
        <div id="page" class="col">
          <%- include("../partials/header.ejs", {page: "Funções" }) %>
          <div id="main">
            <div class="container" id="main-container">
              <div class="row">
                <div class="col-3" id="search-roles">
                  <form autocomplete="off" onsubmit="return false;">
                    <div id="search-group">
                      <input
                        type="text"
                        id="search"
                        placeholder="Search"
                        name="search"
                        autocomplete="off"
                      />
                      <div class="input-group-btn">
                        <img src="img/lupa.png" alt="" />
                      </div>
                    </div>
                  </form>
                </div>
                <!-- Button trigger modal -->
                <div class="col add-element-button main-buttons-container">
                  <button
                    type="button"
                    class="btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#add-role-modal"
                  >
                    Adicionar novo
                  </button>
                </div>
              </div>
              <div class="row table-container">
                <table
                  id="roles-table"
                  class="table table-hover table-style"
                  data-show-multi-sort="true"
                  data-sort-priority='[
                      {"sortName": "name","sortOrder":"desc"},
                    ]'
                >
                  <thead class="table-head-custom">
                    <tr>
                      <th data-field="name" data-sortable="true">Função</th>
                      <th data-field="tools">Ações</th>
                    </tr>
                  </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- toast - role added succesfully -->
      <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div
          id="addToast"
          class="toast"
          role="alert"
          aria-live="assertive"
          aria-atomic="true"
        >
          <div class="toast-header">
            <strong class="me-auto">Mensagem</strong>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="toast"
              aria-label="Close"
            ></button>
          </div>
          <div class="toast-body">Função criada com sucesso.</div>
        </div>
      </div>
    </div>

    <!-- toast - role edited succesfully -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      <div
        id="editToast"
        class="toast"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="toast-header">
          <strong class="me-auto">Mensagem</strong>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
        <div class="toast-body">Função alterada com sucesso.</div>
      </div>
    </div>

    <!-- toast - role deleted succesfully -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      <div
        id="deleteToast"
        class="toast"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
      >
        <div class="toast-header">
          <strong class="me-auto">Mensagem</strong>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
        <div class="toast-body">Função excluída com sucesso.</div>
      </div>
    </div>

    <!-- Modal Add Employee -->
    <form action="/roles" method="POST">
      <div class="parent-modal">
        <div
          class="modal fade"
          id="add-role-modal"
          tabindex="-1"
          aria-labelledby="add-role-modal-label"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-dialog-container">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="add-role-modal-label">
                  Adicionar Funcionário
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <div class="row container">
                  <div class="row form-group">
                    <div class="col-4">
                      <label for="role-name">Nome do Funcionário: </label>
                    </div>
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        name="name"
                        id="role-name"
                        placeholder="Nome do Funcionário"
                      />
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col-4">
                      <label for="role-function">Função: </label>
                    </div>
                    <div class="col">
                      <select name="role_name" id="role-function">
                        <option value="dev">Desenvolvedor</option>
                        <option value="Analista">Analista</option>
                        <option value="DBA-manager">Gerente de Projetos</option>
                      </select>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col-4">
                      <label for="role-local">Região: </label>
                    </div>
                    <div class="col">
                      <select name="location" id="local">
                        <option value="AM">Manaus</option>
                        <option value="SP">Guarulhos</option>
                        <option value="">Ambos</option>
                      </select>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col-4">
                      <label for="role-worktime"
                        >Tempo alocado para projetos no mês:
                      </label>
                    </div>
                    <div class="col">
                      <input
                        type="number"
                        name="projects_workload"
                        id="role-worktime"
                      />
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col-4">
                      <label for="">Funcionário Interno (CLT)</label>
                    </div>
                    <div class="col">
                      <select name="type" id="">
                        <option value="clt">CLT</option>
                        <option value="third-role">Terceiro</option>
                      </select>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-1"><label for="tags">Tags: </label></div>
                    <div class="col role-tag-list">
                      <div class="role-tag-element"></div>
                      <div class="role-add-tag">
                        <button type="button" onclick="newTagName()">+</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <div class="buttons-container">
                  <button
                    type="submit"
                    onclick="toastTriggerAdd()"
                    class="btn-primary"
                    id="liveToastBtn"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  >
                    Adicionar Funcionário
                  </button>
                </div>
                <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> -->
                <!-- <button type="button" class="btn btn-primary">PLACEHOLDER</button> -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>

    <!-- Modal View Employee -->
    <div class="parent-modal parent-modal-role">
      <div
        class="modal fade"
        id="view-role-modal"
        tabindex="-1"
        aria-labelledby="view-role-modal-label"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-container">
          <div class="modal-content">
            <div class="modal-header">
              <div class="col"></div>
              <div class="col">
                <h5 class="modal-title" id="view-role-modal-label">
                  Colaborador
                </h5>
              </div>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <div class="row container">
                <div class="row" id="role-info-section"></div>
                <div class="row">
                  <table
                    id="role-project-list"
                    class="table table-sm role-view-tables"
                  >
                    <thead>
                      <tr class="table-head">
                        <th scope="col">Projeto</th>
                        <th scope="col">Andamento</th>
                        <th scope="col">Horas / Dia</th>
                        <th scope="col">Horas / Mês</th>
                        <th scope="col">Início</th>
                        <th scope="col">Fim</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>Projeto 1</td>
                        <td>80%</td>
                        <td>1H</td>
                        <td>10h</td>
                        <td>01/02/22</td>
                        <td>08/08/22</td>
                      </tr>
                      <tr>
                        <td>Projeto 4</td>
                        <td>40%</td>
                        <td>2H</td>
                        <td>10H</td>
                        <td>14/04/22</td>
                        <td>03/12/22</td>
                      </tr>
                      <tr>
                        <td>Projeto 5</td>
                        <td>60%</td>
                        <td>3h</td>
                        <td>15H</td>
                        <td>23/05/22</td>
                        <td>17/11/22</td>
                      </tr>
                      <tr>
                        <td>Projeto 8</td>
                        <td>60%</td>
                        <td>1H</td>
                        <td>35H</td>
                        <td>23/05/22</td>
                        <td>17/11/22</td>
                      </tr>
                      <tr>
                        <td>Projeto 4</td>
                        <td>40%</td>
                        <td>2H</td>
                        <td>18H</td>
                        <td>14/04/22</td>
                        <td>03/12/22</td>
                      </tr>
                      <tr>
                        <td>Projeto 5</td>
                        <td>60%</td>
                        <td>2 H</td>
                        <td>22H</td>
                        <td>23/05/22</td>
                        <td>17/11/22</td>
                      </tr>
                      <tr>
                        <td>Projeto 8</td>
                        <td>60%</td>
                        <td>1H</td>
                        <td>59H</td>
                        <td>23/05/22</td>
                        <td>17/11/22</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- modal remove role -->
    <div
      class="modal fade"
      id="remove-role-modal"
      tabindex="-1"
      aria-labelledby="view-role-modal-label"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Remover Funcionário</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <p>Deseja Remover o Funcionario?</p>
          </div>
          <div class="modal-footer" id="delete-modal"></div>
        </div>
      </div>
    </div>

    <!-- Modal Edit Employee -->
    <div class="parent-modal">
      <div
        class="modal fade"
        id="edit-role-modal"
        tabindex="-1"
        aria-labelledby="edit-role-modal-label"
        aria-hidden="true"
      >
        <form action="/roles/edit" method="post">
          <div class="modal-dialog modal-dialog-container">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="edit-role-modal-label">
                  Editar Funcionário
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <div class="row container">
                  <input
                    style="display: hidden"
                    type="hidden"
                    name="id"
                    id="role_id"
                    value=""
                  />
                  <div class="form-group">
                    <div class="row">
                      <div class="col-4">
                        <label for="role-name">Nome do Funcionário: </label>
                      </div>
                      <div class="col-8">
                        <input
                          type="text"
                          class="form-control"
                          name="nameEdit"
                          id="role_name"
                          placeholder="Nome do Funcionário"
                          value=""
                        />
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-4">
                        <label for="role-function">Função: </label>
                      </div>
                      <div class="col">
                        <input
                          type="text"
                          class="form-control"
                          name="role_nameEdit"
                          id="role_function"
                          placeholder="Função"
                          value=""
                        />
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-4">
                        <label for="role-local">Região: </label>
                      </div>
                      <div class="col">
                        <select name="locationEdit" id="role-location">
                          <option value="Ambos">Ambos</option>
                          <option value="SP">SP</option>
                          <option value="AM">AM</option>
                        </select>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-4">
                        <label for="role-worktime"
                          >Tempo alocado para projetos no mês:
                        </label>
                      </div>
                      <div class="col">
                        <input
                          type="number"
                          name="projects_workloadEdit"
                          class="form-control"
                          id="role_workload"
                          value=""
                        />
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-4">
                        <label for="">Tipo (CLT ou Terceirizado) </label>
                      </div>
                      <div class="col">
                        <select name="typeEdit" id="role-type">
                          <option value="CLT">CLT</option>
                          <option value="TERCEIRO">Terceiro</option>
                        </select>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-1"><label for="tags">Tags: </label></div>
                    <div class="col role-tag-list">
                      <div id="role-tag-element"></div>
                      <div id="role-add-tag">
                        <button type="button" onclick="newTagName()">+</button>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <div id="buttons-container">
                    <button
                      type="submit"
                      id="button"
                      class="btn-primary"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    >
                      Salvar
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
        <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> -->
        <!-- <button type="button" class="btn btn-primary">PLACEHOLDER</button> -->
      </div>
    </div>

    <!-- Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Bootstrap Table -->
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://unpkg.com/bootstrap-table@1.20.1/dist/bootstrap-table.min.js"></script>
    <!-- Latest compiled and minified Locales -->
    <script src="https://unpkg.com/bootstrap-table@1.20.1/dist/locale/bootstrap-table-zh-CN.min.js"></script>
    <script src="js/roles.js"></script>
  </body>
</html>
